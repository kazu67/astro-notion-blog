---
import { getDatabase } from '../lib/notion/client';

const [database] = await Promise.all([
  getDatabase()
]);

const iconSrc = database.Icon.Url;

import Layout from '../layouts/Layout.astro';
import Profile from '../components/About/Profile.astro';
import ThisBlog from '../components/About/ThisBlog.astro';
---

<Layout title='' description='' path='/' ogImage=''>
  <div slot="main">
    <div class="md:w-[80vw] lg:w-[70vw] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
      <Profile iconSrc={iconSrc}/>
      <ThisBlog />
    </div>
  </div>
</Layout>
